@model IEnumerable<ProyectDTO>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var proyecto in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@proyecto.Imagen" class="card-img-top" alt="image" />
                    <div class="card-body">
                        <h3 class="card-title">
                            @proyecto.Titulo
                        </h3>
                        <p class="card-text">
                            @proyecto.Descripcion
                        </p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
